{
    "name": "empty-line-remover",
    "displayName": "Empty Line Remover",
    "description": "Removes multiple empty lines optionally on save",
    "version": "0.0.0",
    "publisher": "rintoj",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rintoj/empty-line-remover.git"
    },
    "activationEvents": [
        "onCommand:emptyLine.remove",
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "emptyLine.remove",
            "title": "Remove empty lines"
        }],
        "keybindings": [{
            "command": "emptyLine.remove",
            "title": "Remove empty lines",
            "key": "ctrl+l",
            "mac": "cmd+l"
        }],
        "configuration": {
            "type": "object",
            "title": "Configuration for emptyLine",
            "properties": {
                "emptyLine.keepOneEmptyLine": {
                    "type": "boolean",
                    "default": true,
                    "description": "Set to false to remove all empty lines or true to keep one."
                },
                "emptyLine.triggerOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "If set to true, the command will be triggered on save."
                },
                "emptyLine.insertLineAfterBlock": {
                    "type": "boolean",
                    "default": true,
                    "description": "If set to true, inserts an empty line after a block statement"
                },
                "emptyLine.languageIds": {
                    "type": "array",
                    "default": [
                        "javascript", "typescript", "json", "css", "scss"
                    ],
                    "description": "List of languages to be processed"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    }
}