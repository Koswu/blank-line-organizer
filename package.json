{
  "name": "blank-line-organizer",
  "displayName": "Blank Line Organizer",
  "description": "Removes unnecessary blank lines and adds if needed",
  "version": "0.1.5",
  "publisher": "koswu",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koswu/blank-line-organizer.git"
  },
  "activationEvents": [
    "onCommand:blankLine.remove",
    "onLanguage"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "blankLine.process",
        "title": "Remove blank lines"
      }
    ],
    "keybindings": [
      {
        "command": "blankLine.process",
        "title": "Remove blank lines",
        "key": "ctrl+;",
        "mac": "cmd+;"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Configuration for blankLine",
      "properties": {
        "blankLine.keepOneEmptyLine": {
          "type": "boolean",
          "default": true,
          "description": "If set to true removes all consecutive blank lines, except one."
        },
        "blankLine.triggerOnSave": {
          "type": "boolean",
          "default": true,
          "description": "If set to true, the command will be triggered on save."
        },
        "blankLine.languageIds": {
          "type": "array",
          "default": [
            "javascript",
            "javascriptreact",
            "typescript",
            "typescriptreact",
            "json",
            "css",
            "scss",
            "yaml",
            "json",
            "python"
          ],
          "description": "List of languages to be processed"
        }
      }
    }
  },
  "keywords": [
    "Empty Line",
    "Blank Line",
    "New Line",
    "Formatter",
    "Remover"
  ],
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "^6.14.0",
    "typescript": "^3.9.7",
    "vscode": "^1.1.34",
    "@types/mocha": "^10.0.6",
    "npm": "^10.8.0",
    "i": "^0.3.7"
  },
  "dependencies": {
    "event-stream": "^4.0.1"
  }
}
